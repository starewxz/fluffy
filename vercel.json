{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/img/(.*)",
      "destination": "/img/$1"
    }
  ],

  "headers": [
    {
      "source": "/img/(.*.(jpg|JPG|png|PNG|gif|webp))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}